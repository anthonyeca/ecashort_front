---
import { Form } from '../components/Form'
import Layout from '../layouts/Layout.astro'
---

<Layout title="URL Shortener - ecashort">
  <main class="m-auto p-4 text-white text-lg">
    <div class="flex flex-col items-center justify-center pt-20 pb-20">
      <div class="flex justify-center items-center">
        <h1
          class="text-2xl md:text-6xl md:mb-2 mb-8 opacity-85 animate-fade animate-duration-500"
        >
          Open Source
          <span class="text-gradient">Link Shortener</span>
        </h1>
      </div>

      <Form client:load />
    </div>

    <style>
      .text-gradient {
        background-image: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
      }
    </style>
  </main>
</Layout>
