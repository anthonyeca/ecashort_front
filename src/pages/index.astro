---
import Layout from '../layouts/Layout.astro'
import Card from '../components/Card.astro'
---

<Layout title="URL Shortener - ecashort">
  <main class="m-auto p-4 text-white text-lg">
    <div class="flex flex-col items-center justify-center pt-20 pb-20">
      <h1
        class="text-3xl md:text-6xl mb-2 md:mb-5 opacity-85 animate-fade animate-duration-500"
      >
        Open Source
        <span class="text-gradient">Link Shortener</span>
      </h1>

      <form class="animate-fade" action="">
        <label for="url">Enter your URL</label>
        <input
          id="url"
          class="instructions text-white rounded-md ml-2 px-4 py-2"
          type="text"
          placeholder="https://anthonyeca.dev"
        />
      </form>
    </div>
  </main>

  <style>
    .text-gradient {
      background-image: var(--accent-gradient);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-size: 400%;
      background-position: 0%;
    }
    label {
      color: rgb(var(--accent-light));
      font-weight: bold;
    }
    .instructions {
      border: 1px solid rgba(var(--accent-light), 25%);
      background: linear-gradient(
        rgba(var(--accent-dark), 66%),
        rgba(var(--accent-dark), 33%)
      );
    }
  </style>
</Layout>
